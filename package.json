{
  "private": true,
  "scripts": {
    "lint": "run-p -l -c --aggregate-output lint:*",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint .",
    "fmt": "run-s fmt:prettier fmt:eslint",
    "fmt:prettier": "npm run lint:prettier -- --write",
    "fmt:eslint": "npm run lint:eslint -- --fix"
  },
  "devDependencies": {
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.0"
  }
}
